{% extends 'layoutAdmin.html.twig' %}

{% block title %}
    AdminMenu
{% endblock %}

{% block content %}
    <div class="container py-5">
        <div class="row">
            <div class="col-md-12 text-center">
                <h1 class="font-weight-light">Menus</h1>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-hover table-dark">
                    <thead>
                    <tr>
                        <th scope="col">Menu</th>
                        <th scope="col">Image</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Description</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for menu in menus %}
                    <tr>
                        <th scope="row">{{ menu.id }}</th>
                        <td><img class="img-thumbnail w-50" src="{{menu.img_src}}" alt="image_menu"></td>
                        <td>{{ menu.name }}</td>
                        <td>{{ menu.description }}</td>
                        <td><a class="btn btn-warning btn-sm" href="/Admin/updateMenu/{{ menu.id }}">Edit</a></td>
                        <td><a class="btn btn-danger btn-sm" href="/Admin/delete/{{ menu.id }}">Delete</a></td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row pb-3 pt-3">
            <div class="col-md-12 d-flex justify-content-end">
                <a class="btn btn-success" href="/Admin/addMenu/">Ajouter un menu</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}