{% extends 'layoutAdmin.html.twig' %}

{% block content %}
    <section>
    <div class="container d-flex flex-column justify-content-between vh-100">
        <div class="row justify-content-center mt-5">
            <div class="col-xl-5 col-lg-6 col-md-10">
                <div class="card">
                    <div class="card-header bg-dark">
                        <div class="app-brand">
                                <img src="/assets/images/logo.png" alt="StrasCook" class="w-100">
                        </div>
                    </div>
                    <div class="card-body p-5">
                        <h4 class="text-dark mb-5">Administration</h4>
                        <form action="/admin/login" method="POST">
                            <div class="row">
                                <div class="form-group col-md-12 mb-4">
                                    <input type="text" name="admin_login" class="form-control input-lg" id="admin_login" placeholder="username">
                                    {% if errors is defined and errors is not empty %}
                                        <p class="form-text"><small class="text-danger">{{ errors.login }}</small></p>
                                    {% endif %}
                                </div>
                                <div class="form-group col-md-12 mb-4">
                                    <input type="password" name="admin_pass" class="form-control input-lg" placeholder="password">
                                    {% if errors is defined and errors is not empty %}
                                        <p class="form-text"><small class="text-danger">{{ errors.pass }}</small></p>
                                    {% endif %}
                                </div>
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-lg btn-dark btn-block mb-4">Sign In</button>
                                    <p>Retourner vers le site <a class="text-blue" href="/"> StrasCook</a>
                                    </p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="copyright pl-0">
            <p class="text-center">&copy; 2019 Copyright Strascook
            </p>
        </div>
    </div>
</section>
{% endblock %}