{% extends 'layout.html.twig' %}

{% block title %} Stras'Cook - Menu {{ menu.name }} {% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/stylemenu.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,600,700,900" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Oleo+Script" rel="stylesheet">
{% endblock %}
{% block image_url %}/assets/images/banner.jpg{%  endblock %}

{% block content %}

    <section class="menu_list mt-60 mb-60">
        <div class="container py-5">
            <div class="row">
                <div class="col-xl-12">
                    <div class="section-title text-center mb-60">
                        <h4>Nos Menus</h4>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="tab-content col-xl-12" id="myTabContent">
                    <div class="tab-pane fade active show" id="dinner" role="tabpanel" aria-labelledby="dinner-tab">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="single_menu_list">
                                    <img src="{{menu.img_src}}" alt="">
                                    <div class="menu_content">
                                        <h4>{{ menu.name }} Classique <span>20€</span></h4>
                                            <p>{{ menu.description }}</p>
                                    </div>
                                </div>
                                <div class="single_menu_list">
                                    <img src="{{menu.img_src}}" alt="">
                                    <div class="menu_content">
                                        <h4>{{ menu.name }}  Local <span>30€</span></h4>
                                         <p>{{ menu.description }}</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="single_menu_list">
                                    <ul class="">
                                        <li><h4>Entrée : </h4> {{ menu.starter }}</li>
                                        <li><h4>Plat : </h4> {{ menu.main_course }}</li>
                                        <li><h4>Dessert : </h4> {{ menu.dessert }}</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% if images is not empty %}
               <!-- <div class="row">
                    <a href="/reservation/reserver" class="btn"><span class="btn-inner">Réservation</span></a>
                    <div class="container">
                        <h2>Our  Partners/ Our Clients</h2>
                        <section class="images_menu slider">
                        {% for image in images %}
                            <div class="slide"><img src="{{ image.img_src }}"></div>
                            {% endfor %}
                        </section>

                        <h2><a href="http://www.webcoderskull.com" target="_blank">http://www.webcoderskull.com</a></h2>
                    </div>
                </div> --!>
                {% endif %}
            </div>
        </div>
    </section>
{% endblock %}

{% block javascript %}{% endblock %}