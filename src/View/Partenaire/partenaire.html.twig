{% extends 'layout.html.twig' %}

{% block title %} Stras'Cook - Nos partenaires {% endblock %}

{% block image_url %}/assets/images/partenariats.jpg{% endblock %}

{% block content %}
    <div class="container py-5">
        <div class="row">
            <div class="col-md-12 text-center">
                <div class="titre_index"><h1>Partenariats</h1></div>
            </div>
        </div>
    </div>

    {% for partenaire in partenaires %}
        <div class="container py-5">
            <div class="row">
                <div class="col-md-6">
                    <img src="{{ partenaire.thum_src }}"  alt="partenaire">
                </div>
                <div class="col-md-6">
                    <h3>{{ partenaire.title }}</h3>
                    <p>{{ partenaire.description }}</p>
                    <a href="{{ partenaire.url }}" class="stretched-link">{{ partenaire.title }}</a>
                </div>
            </div>
        </div>
        <hr>
    {% endfor %}

{% endblock %}